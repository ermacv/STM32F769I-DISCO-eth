{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "Make",
      "command": "cmake -H${workspaceFolder}/ -Bbuild/ && cmake --build build/ -- -j8",
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "shell",
      "label": "Make Clean",
      "command": "cmake -H${workspaceFolder}/ -Bbuild/ && cmake --build build/ --clean-first -- -j8",
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "shell",
      "label": "Make Debug",
      "command": "cmake -H${workspaceFolder}/ -Bbuild/ -DCMAKE_BUILD_TYPE=Debug && cmake --build build/ -- -j8",
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "shell",
      "label": "Make Clean Debug",
      "command": "cmake -H${workspaceFolder}/ -Bbuild/ -DCMAKE_BUILD_TYPE=Debug && cmake --build build/ --clean-first -- -j8",
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}